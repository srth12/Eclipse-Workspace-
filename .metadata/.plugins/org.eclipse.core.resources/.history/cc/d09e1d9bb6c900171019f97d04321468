package com.test;

public class MatrixReach {
	private static int totalPaths = 0;
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	
	public static void traverse(int rowCount, int columnCount, int r, int c, int[][] a) {
		if(r >= rowCount || c >= columnCount)
			return;
		if(r == rowCount -1 && c == columnCount -1) {
			totalPaths++;
			return;
		}
		traverse(rowCount, columnCount, r+1, c, a);
		traverse(rowCount, columnCount, r, c+1, a);
		
	}
	
	static int numberOfPaths(int[][] a) {
		int rowCount = a.length;
		int columnCount = a[0].length;
		traverse(rowCount, columnCount, 0, 0, a);
		return 0;
	}

}
